<UserControl x:Class="MyselfGame.Pages.AnswerContainer" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:MyselfGame.Pages" mc:Ignorable="d" d:DesignHeight="900" d:DesignWidth="1600" Loaded="UserControl_Loaded" >
    <Border Margin="16">
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <ScrollViewer Style="{DynamicResource ScrollViewer}" >
                <StackPanel x:Name="TeamsField" HorizontalAlignment="Center" />
            </ScrollViewer>
            <TextBlock x:Name="AnswerContent" FontSize="64" Grid.Column="1" HorizontalAlignment="Center" Style="{DynamicResource Text.Title}" />
        </Grid>
    </Border>
</UserControl>
<UserControl x:Class="MyselfGame.Pages.QuestionContainer" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:MyselfGame.Pages" mc:Ignorable="d" d:DesignHeight="900" d:DesignWidth="1600" Loaded="UserControl_Loaded" >
    <Border Margin="16">
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock x:Name="Timer" HorizontalAlignment="Center" Style="{DynamicResource Text.Subtitle}" />
            <TextBlock x:Name="QuestionContent" Grid.Row="1" FontSize="64" HorizontalAlignment="Center" Style="{DynamicResource Text.Title}" />
            <Button x:Name="Continue" Content="Продолжить" Grid.Row="2" Style="{DynamicResource Button.Accent.TextOnly}" Click="Continue_Click" />
        </Grid>
    </Border>
</UserControl>